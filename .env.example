# App environment: development | production | test
NODE_ENV=development

# Logging level: debug | info | warn | error
LOG_LEVEL=debug

# Application name for logger context
APP_NAME=shikor-core

# Optional: hostname override (default: auto-detected)
HOSTNAME=localhost

# Database connection URL (for future db modules)
DATABASE_URL=postgres://user:password@localhost:5432/shikor

# Secret key for JWT or session encryption
SECRET_KEY=your-secret-key-here
